# Telegram Bot Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: Telegram Bot Configuration
# ===========================================
TELEGRAM_BOT_TOKEN=your-bot-token-here

# ===========================================
# OPTIONAL: Chat Configuration
# ===========================================
TELEGRAM_CHAT_ID=0
GROUP_CHAT_ID=-1001234567890

# ===========================================
# OPTIONAL: OpenCode Server Auto-Start
# ===========================================
# Set to true to automatically start OpenCode server when wrapper starts
OPENCODE_LAUNCHER_ENABLED=false

# Path to opencode binary (leave empty for auto-detect)
OPENCODE_PATH=

# OpenCode server host/port (if auto-starting)
OPENCODE_LAUNCHER_HOST=127.0.0.1
OPENCODE_LAUNCHER_PORT=4096

# OpenCode server password (if set)
OPENCODE_LAUNCHER_PASSWORD=

# ===========================================
# OPTIONAL: Wrapper Server
# ===========================================
WRAPPER_URL=http://localhost:5147
WRAPPER_TIMEOUT=300

# ===========================================
# OPTIONAL: Tailscale
# ===========================================
TAILSCALE_ENABLED=false
TAILSCALE_OPENCODE_IP=100.x.x.x
TAILSCALE_SSH_PORT=22
TAILSCALE_SSH_USER=your-mac-username
TAILSCALE_SSH_KEY=~/.ssh/id_ed25519

# ===========================================
# OPTIONAL: Supabase
# ===========================================
SUPABASE_ENABLED=false
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key

# ===========================================
# OPTIONAL: Logging
# ===========================================
LOG_LEVEL=INFO
