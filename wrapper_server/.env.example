# Telegram Bot Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: Telegram Bot Configuration
# ===========================================
TELEGRAM_BOT_TOKEN=your-bot-token-here

# ===========================================
# OPTIONAL: Chat Configuration
# ===========================================
TELEGRAM_CHAT_ID=0
GROUP_CHAT_ID=-1001234567890

# ===========================================
# OPTIONAL: Wrapper Server
# ===========================================
WRAPPER_URL=http://localhost:5147
WRAPPER_TIMEOUT=300

# ===========================================
# OPTIONAL: Tailscale
# ===========================================
TAILSCALE_ENABLED=false
TAILSCALE_OPENCODE_IP=100.x.x.x
TAILSCALE_SSH_PORT=22
TAILSCALE_SSH_USER=your-mac-username
TAILSCALE_SSH_KEY=~/.ssh/id_ed25519

# ===========================================
# OPTIONAL: Supabase
# ===========================================
SUPABASE_ENABLED=false
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key

# ===========================================
# OPTIONAL: Logging
# ===========================================
LOG_LEVEL=INFO
