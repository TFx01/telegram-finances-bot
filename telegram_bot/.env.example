# Telegram Bot Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: Telegram Bot Configuration
# ===========================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-bot-token-here

# ===========================================
# OPTIONAL: Chat Configuration
# ===========================================
# Your personal chat ID (for notifications, etc.)
# Get it from @userinfobot on Telegram
TELEGRAM_CHAT_ID=0

# Group chat ID for group-only mode (negative number, starts with -100)
# Get it by adding @userinfobot to your group
GROUP_CHAT_ID=-1001234567890

# ===========================================
# OPTIONAL: Wrapper Server
# ===========================================
WRAPPER_URL=http://localhost:5147
WRAPPER_TIMEOUT=300

# ===========================================
# OPTIONAL: Tailscale (for remote access)
# ===========================================
# Find your Tailscale IP by running: `tailscale ip` on your MacBook
TAILSCALE_ENABLED=false
TAILSCALE_OPENCODE_IP=100.x.x.x
TAILSCALE_SSH_PORT=22
TAILSCALE_SSH_USER=your-mac-username
TAILSCALE_SSH_KEY=~/.ssh/id_ed25519

# ===========================================
# OPTIONAL: Supabase
# ===========================================
SUPABASE_ENABLED=false
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key

# ===========================================
# OPTIONAL: Logging
# ===========================================
# DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
